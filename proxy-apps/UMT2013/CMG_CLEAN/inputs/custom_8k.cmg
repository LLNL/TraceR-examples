# processor block decomposition
sms(32,16,16)

# Always specify blocks in block base numbering
blk(on,0:31,0:15,0:15)
numzones(8,8,10)

# tag boundary faces
tag("xMinFaces",face,(0:0,0:16,0:16))
tag("xMaxFaces",face,(32:32,0:16,0:16))
tag("yMinFaces",face,(0:32,0:0,0:16))
tag("yMaxFaces",face,(0:32,16:16,0:16))
tag("zMinFaces",face,(0:32,0:16,0:0))
tag("zMaxFaces",face,(0:32,0:16,16:16))

# Hex subdivisions
sub(10%,0:31,0:15,0:15,(7,0,0,0)) #7 hex
seed(10)
